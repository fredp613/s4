@model IEnumerable<MasterProject.Models.Inquiry>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Response)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResponseBy)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Response)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InquiryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InquiryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InquiryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
